<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(((string)ViewBag.Title).ToString().Localize() + " - " + "My ASP.NET Application".Localize())</title>
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css/ui")
    @Styles.Render("~/Content/css")
    @RenderSection("head", required: false)


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Application name".Localize(), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        </div>
        <div class="navbar-collapse collapse">
            @Html.Partial("_MenuPartial")
            @Html.Partial("_LoginPartial")
        </div>
    </div>

    <div class="body-content">
        @RenderBody()
    </div>
    <div class="navbar navbar-fixed-bottom footer">
        <hr />
        <p>&copy; @DateTime.Now.Year - @("My ASP.NET Application".Localize())</p>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
